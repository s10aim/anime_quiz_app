<div class="container-fluid mt-5">
  <div class="form-wrapper pb-4">
    <h1>パスワード再設定</h1>
    <%= simple_form_for resource, url: password_path(resource_name), html: { method: :post }, data: { turbo: false } do |f| %>
      <div class="form-item">
        <%= f.input :email, autofocus: true, autocomplete: "email" %>
      </div>
      <div class="button-panel">
        <%= f.submit  t('.send_me_reset_password_instructions'), class: 'button' %>
      </div>
    <% end %>
    <div class="form-footer">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
