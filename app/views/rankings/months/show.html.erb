<div class="container mx-auto my-5" style="max-width: 850px;">
  <h1 class="text-center my-5">今週のランキング</h1>
  <table class="table mb-5">
    <tbody>
      <% @month_rankings.each.with_index(1) do |month_ranking, i| %>
        <tr>
          <th scope="row col" style="width: 18%" class="ps-4 py-3"><%= i %>位</th>
          <td class="col py-3" style="width: 50%"><%=  month_ranking.user.nickname %></td>
          <td class="col text-center py-3" style="width: 20%"><%= month_ranking.ranking_score %>点</td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= link_to "ランキングに戻る", rankings_path %>
</div>
